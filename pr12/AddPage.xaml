<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pr12.AddPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Фамилия"/>
            <Entry x:Name="FirstName"/>
            <Label Text="Имя"/>
            <Entry x:Name="LastName"/>
            <Label Text="Отчество"/>
            <Entry x:Name="MidleName"/>
            <Label Text="Время пробега"/>
            <Entry x:Name="Time"/>
            <Button Margin="20,0,20,0" Text="Добавить" Clicked="Add_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>